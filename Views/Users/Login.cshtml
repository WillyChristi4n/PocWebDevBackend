@model PocWebDevBackend.Models.User

@{
    ViewData["Title"] = "Login";
}


<div class="login-container">
    <h1>Login</h1>
    <form asp-action="Login">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <label  asp-for="Email" class="control-label"></label>
        <input  asp-for="Email" class="form-control" type="email" name="email" placeholder="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>


        <label asp-for="Password" class="control-label"></label>
        <input type="password" name="password" placeholder="Senha" asp-for="Password" class="form-control" />
        <span  asp-validation-for="Password" class="text-danger"></span>


        <input type="submit" value="Entrar" class="custom_btn" />
    </form>
    <p class="login-help">
        Esqueceu sua senha? <a href="#">Recuperar acesso</a>
    </p>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
